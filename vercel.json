{
  "version": 2,
  "builds": [
    {
      "src": "./app.py",
      "use": "@vercel/python",
      "config": {
        "functions": {
          "controllers/*.js": { "maxDuration": 60 },
          "middleware/**/*.js": { "maxDuration": 60 }
        }
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/app.py" }
  ]
}
